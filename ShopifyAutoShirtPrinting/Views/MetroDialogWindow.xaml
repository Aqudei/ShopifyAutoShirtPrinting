    <mah:MetroWindow.MaxHeight>
        <Binding ConverterParameter="0.8" Converter="{StaticResource PercentConverter}" Mode="OneWay"/>
    </mah:MetroWindow.MaxHeight>-->
    
</mah:MetroWindow>

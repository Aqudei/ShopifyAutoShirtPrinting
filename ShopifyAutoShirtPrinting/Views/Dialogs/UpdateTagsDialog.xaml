<UserControl x:Class="ShopifyEasyShirtPrinting.Views.Dialogs.UpdateTagsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopifyEasyShirtPrinting.Views.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Subtitle -->
            <RowDefinition Height="*"/>
            <!-- Items -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Confirm Update Tags"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="Are you sure you want to update the tags of the following items?"
                   FontSize="14"
                   Foreground="#666"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Items List -->
        <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="#DDD"
                CornerRadius="6"
                Padding="10">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="6"
                                    Margin="0,0,0,6"
                                    Background="#F7F7F7"
                                    CornerRadius="4">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    MinWidth="90"
                    Margin="0,0,10,0"/>

            <Button Content="Update Tags"
                    Command="{Binding OkCommand}"
                    IsDefault="True"
                    MinWidth="120"
                    Style="{DynamicResource MahApps.Styles.Button.Accent}"/>

        </StackPanel>

    </Grid>
</UserControl>
